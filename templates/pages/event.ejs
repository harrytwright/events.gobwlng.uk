  const pageDescription = meta.description || `Results for ${meta.name || 'bowling tournament'}`;
  const sluggifiedTitle = slugify(meta.name || 'tournament');

  function slugify(str) {
    return String(str)
            .toLowerCase()
            .trim()
            .replace(/['"]/g, "")
            .replace(/[^a-z0-9]+/g, "-")
            .replace(/(^-|-$)+/g, "");
  }
