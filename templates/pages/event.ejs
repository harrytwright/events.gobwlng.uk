    <script>
      // Pre-baked table state from build
      const tableState = <%- JSON.stringify(tableState) %>;

      // Configuration (preserved from original)
      const numericHeaderHints = <%- JSON.stringify(numericHeaderHints) %>;
      const columnWidthMap = <%- JSON.stringify(columnWidthMap) %>;

      // ---- Utility functions ----

      function isLikelyNumericHeader(h) {
        return numericHeaderHints.some((k) => h.toLowerCase().includes(k));
      }

      function parseMaybeNumber(v) {
        if (typeof v === 'number') return v;
        if (typeof v !== 'string') return NaN;
        const s = v.replace(/,/g, '').trim();
        if (s === '') return NaN;
        const n = Number(s);
        return Number.isFinite(n) ? n : NaN;
      }

      function safeGetRowValue(row, key) {
        return row[key] ?? row[key?.trim?.()] ?? '';
      }

      function parsePlace(value) {
        if (value === null || value === undefined) return NaN;
        const match = String(value).trim().match(/-?\d+(\.\d+)?/);
        return match ? Number(match[0]) : NaN;
      }

      const getPlaceClass = (placeValue) => {
        if (placeValue === 1) return 'border-s-2 border-s-firebrick-600';
        if (placeValue === 2) return 'border-s-2 border-s-deep-blue-600';
        if (placeValue === 3) return 'border-s-2 border-s-amber-500';
        return 'border-s-2 border-transparent';
      };

      function sortRows(rows, key, dir, columns = []) {
        const withIndex = rows.map((r, i) => ({ r, i }));
        const numericPreferred =
          columns.find((col) => col.key === key)?.type === 'number' ||
          isLikelyNumericHeader(key);
        withIndex.sort((a, b) => {
          const av = a.r[key] ?? a.r[key?.trim?.()];
          const bv = b.r[key] ?? b.r[key?.trim?.()];
          if (numericPreferred) {
            const an = parseMaybeNumber(av);
            const bn = parseMaybeNumber(bv);
            if (!Number.isNaN(an) && !Number.isNaN(bn)) {
              return dir === 'asc' ? an - bn : bn - an;
            }
          }
          const as = (av ?? '').toString().toLowerCase();
          const bs = (bv ?? '').toString().toLowerCase();
          if (as < bs) return dir === 'asc' ? -1 : 1;
          if (as > bs) return dir === 'asc' ? 1 : -1;
          return a.i - b.i;
        });
        return withIndex.map((x) => x.r);
      }

      function getColumnConfig(tableKey, key) {
        return tableState[tableKey]?.columns?.find((col) => col.key === key);
      }

      function getColumnWidthClass(tableKey, key) {
        const col = getColumnConfig(tableKey, key);
        return col?.width || columnWidthMap[key] || columnWidthMap['*'];
      }

      // ---- Table Rendering ----

      function handleSortClick(tableKey, key) {
        const st = tableState[tableKey];
        if (!st) return;
        const column = st.columns.find((col) => col.key === key);
        if (!column || column.sortable === false) return;
        const prev = st.sort || { key: '', dir: 'asc' };
        const nextDir = prev.key === key && prev.dir === 'asc' ? 'desc' : 'asc';
        st.sort = { key, dir: nextDir };
        const sorted = sortRows(st.rowsOriginal, key, nextDir, st.columns);
        renderTable(st.columns, sorted, tableKey + 'Header', tableKey + 'Body', tableKey);
        applySearch();
      }

      function renderTable(columns, data, headerId, bodyId, tableKey) {
        const theadTr = document.getElementById(headerId);
        const tbody = document.getElementById(bodyId);
        if (!theadTr || !tbody) return;

        theadTr.innerHTML = '';
        tbody.innerHTML = '';

        const currentSort = tableState[tableKey]?.sort || { key: '', dir: 'asc' };

        columns.forEach((column) => {
          const th = document.createElement('th');
          const isSortable = column.sortable !== false;
          const isSorted = currentSort.key === column.key;
          const isPlace = column.key === 'Place';
          th.className = [
            getColumnWidthClass(tableKey, column.key),
            'px-4 py-2 text-left text-xs font-semibold uppercase tracking-wider select-none',
            isSortable ? 'cursor-pointer' : 'cursor-default',
            'sticky top-0 z-10 group',
            isSorted
              ? 'bg-blue-50 text-blue-700'
              : 'bg-gray-50 text-gray-700 hover:bg-gray-100 hover:text-gray-900',
            'transition-colors',
          ].join(' ');
          th.setAttribute('data-key', column.key);
          th.setAttribute('role', 'columnheader');

          const wrap = document.createElement('div');
          wrap.className = 'flex items-center gap-1';
          const label = document.createElement('span');
          label.textContent = column.label;
          if (isPlace) {
            label.className = 'sr-only';
          }
          wrap.appendChild(label);

          if (isSortable) {
            const iconSpan = document.createElement('span');
            iconSpan.className = isSorted
              ? 'ml-1 text-current opacity-100'
              : isPlace
                ? 'ml-1 text-gray-400 opacity-70'
                : 'ml-1 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity';

            iconSpan.innerHTML = isSorted
              ? currentSort.dir === 'asc'
                ? `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4"><path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h9.75m4.5-4.5v12m0 0-3.75-3.75M17.25 21 21 17.25" /></svg>`
                : `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4"><path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h5.25m5.25-.75L17.25 9m0 0L21 12.75M17.25 9v12" /></svg>`
              : `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4"><path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h5.25m5.25-.75L17.25 9m0 0L21 12.75M17.25 9v12" /></svg>`;

            wrap.appendChild(iconSpan);
          }
          th.appendChild(wrap);
          theadTr.appendChild(th);

          if (isSortable) {
            th.addEventListener('click', () => {
              handleSortClick(tableKey, column.key);
            });
          }
        });

        data.forEach((row, index) => {
          const tr = document.createElement('tr');
          const placeValue = parsePlace(safeGetRowValue(row, 'Place'));
          const placeClass = getPlaceClass(placeValue);
          tr.className = (index % 2 === 0
            ? 'bg-white hover:bg-blue-50 transition-colors'
            : 'bg-gray-50 hover:bg-blue-50 transition-colors') + ' ' + placeClass;
          columns.forEach((column) => {
            const td = document.createElement('td');
            const v = row[column.key] ?? row[column.key?.trim?.()] ?? '';
            const isNumeric = (typeof v === 'number' && !isNaN(v)) ||
              (typeof v === 'string' && v.trim() !== '' && !isNaN(Number(v.replaceAll(',', ''))));
            const hintNumeric = isLikelyNumericHeader(column.key);
            const columnNumeric = column.type === 'number';
            td.className = getColumnWidthClass(tableKey, column.key) + ' px-4 py-2 text-sm whitespace-nowrap ' +
              (columnNumeric || isNumeric || hintNumeric ? 'text-right tabular-nums text-gray-900' : 'text-gray-900');
            td.textContent = v;
            tr.appendChild(td);
          });
          tbody.appendChild(tr);
        });

        if (tbody.children.length === 0) {
          const noRow = document.createElement('tr');
          const td = document.createElement('td');
          td.colSpan = columns.length || 1;
          td.className = 'text-center py-8 text-slate font-medium bg-gray-50';
          td.innerHTML = `
            <svg class="w-12 h-12 mx-auto mb-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
            </svg>
            <p>No results found for your search.</p>
          `;
          noRow.appendChild(td);
          tbody.appendChild(noRow);
        }
      }

      // ---- Search ----

      function applySearch() {
        const inputEl = document.getElementById('searchInput');
        if (!inputEl) return;

        const value = (inputEl.value || '').toLowerCase().trim();
        const activePanel = document.querySelector('.tab-panel:not(.hidden)');
        if (!activePanel) return;
        const tbody = activePanel.querySelector('tbody');
        if (!tbody) return;

        const rows = Array.from(tbody.querySelectorAll('tr')).filter(
          (tr) => !tr.classList.contains('no-results-message')
        );

        let visibleCount = 0;
        rows.forEach((tr) => {
          const text = tr.textContent.toLowerCase();
          const isVisible = text.includes(value);
          tr.style.display = isVisible ? '' : 'none';
          if (isVisible) visibleCount++;
        });

        const prevNoResults = tbody.querySelector('.no-results-message');
        if (prevNoResults) prevNoResults.remove();

        if (visibleCount === 0 && rows.length > 0) {
          let colCount = tbody.closest('table')?.querySelectorAll('thead tr th').length || 1;
          const noRow = document.createElement('tr');
          noRow.className = 'no-results-message';
          const td = document.createElement('td');
          td.colSpan = colCount;
          td.className = 'text-center py-8 text-slate font-medium bg-gray-50';
          td.innerHTML = `
            <svg class="w-12 h-12 mx-auto mb-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
            </svg>
            <p>No results found for your search.</p>
          `;
          noRow.appendChild(td);
          tbody.appendChild(noRow);
        }
      }

      // ---- Tab Switching ----

      function resetSortOnTabChange(targetKey) {
        const st = tableState[targetKey];
        if (!st || !st.columns.length || !st.rowsOriginal.length) return;
        const defaultKey = st.defaultSortKey ||
          st.columns.find((column) => column.sortable !== false)?.key ||
          '';
        st.sort = { key: defaultKey, dir: 'asc' };
        const sorted = defaultKey
          ? sortRows(st.rowsOriginal, defaultKey, 'asc', st.columns)
          : st.rowsOriginal;
        renderTable(st.columns, sorted, targetKey + 'Header', targetKey + 'Body', targetKey);
        applySearch();
      }

      function setupTabs() {
        const buttons = document.querySelectorAll('.tab-btn');
        const panels = document.querySelectorAll('.tab-panel');

        buttons.forEach((btn) => {
          btn.addEventListener('click', () => {
            const target = btn.getAttribute('data-tab-target');

            buttons.forEach((b) => {
              b.setAttribute('aria-selected', 'false');
              b.classList.remove('text-blue-600', 'border-blue-600', 'hover:text-blue-600', 'hover:border-blue-600');
              b.classList.add('text-gray-500', 'border-transparent', 'hover:text-gray-700', 'hover:border-gray-300');
            });

            panels.forEach((p) => p.classList.add('hidden'));

            btn.setAttribute('aria-selected', 'true');
            btn.classList.remove('text-gray-500', 'border-transparent', 'hover:text-gray-700', 'hover:border-gray-300');
            btn.classList.add('text-blue-600', 'border-blue-600', 'hover:text-blue-600', 'hover:border-blue-600');

            const panel = document.getElementById(target);
            if (panel) panel.classList.remove('hidden');

            resetSortOnTabChange(target);
            applySearch();
          });
        });
      }

      function bindSortHandlers(tableKey) {
        const st = tableState[tableKey];
        if (!st) return;
        const headerRow = document.getElementById(tableKey + 'Header');
        if (!headerRow) return;
        headerRow.querySelectorAll('th').forEach((th) => {
          const key = th.getAttribute('data-key');
          const column = st.columns.find((col) => col.key === key);
          if (!key || !column || column.sortable === false) return;
          th.addEventListener('click', () => handleSortClick(tableKey, key));
        });
      }

      function initializeActiveTable() {
        const activePanel = document.querySelector('.tab-panel:not(.hidden)');
        if (!activePanel) return;
        const tableKey = activePanel.getAttribute('id');
        const st = tableState[tableKey];
        if (!tableKey || !st) return;
        if (!st.sort) {
          const defaultKey = st.defaultSortKey ||
            st.columns.find((column) => column.sortable !== false)?.key ||
            '';
          st.sort = { key: defaultKey, dir: 'asc' };
        }
        bindSortHandlers(tableKey);
      }

      // ---- Search Setup ----

      function setupSearch() {
        const input = document.getElementById('searchInput');
        const clearBtn = document.getElementById('clearSearchBtn');
        if (!input || !clearBtn) return;

        function toggleClearBtn() {
          clearBtn.style.display = input.value ? '' : 'none';
        }

        input.addEventListener('input', () => {
          applySearch();
          toggleClearBtn();
        });

        clearBtn.addEventListener('click', () => {
          input.value = '';
          applySearch();
          toggleClearBtn();
          input.focus();
        });

        toggleClearBtn();
      }

      // ---- Share setup ----

      async function createShareLink({ url, campaign, contentId, channelHint }) {
        const res = await fetch("/api/share/create", {
          method: "POST",
          headers: { "content-type": "application/json" },
          body: JSON.stringify({ url, campaign, contentId, channelHint })
        });

        if (!res.ok) {
          const msg = await res.text().catch(() => "");
          throw new Error(`Create link failed: ${res.status} ${msg}`);
        }

        return res.json(); // { token, shareUrl }
      }

      async function copyToClipboard(text) {
        await navigator.clipboard.writeText(text);
      }

      const isWebShareSupported = () => {
        return window.navigator.canShare && window.navigator.share;
      };

      function canonicalizeUrl(href) {
        const u = new URL(href);
        // Strip common tracking params to avoid stacking
        ["utm_source","utm_medium","utm_campaign","utm_content","ref","ch"].forEach(p => u.searchParams.delete(p));
        // If your page uses meaningful params (like ?division=A), keep them!
        // Otherwise you can also do: u.search = "";
        return u.toString();
      }

      function setupShare() {
        const shareButton = document.getElementById('shareBtn');

        if (!shareButton || !isWebShareSupported()) return;

        shareButton.classList.remove('hidden');
        shareButton.classList.add('inline-flex');

        shareButton.addEventListener('click', async () => {
          const canonicalUrl = canonicalizeUrl(window.location.href); // or derive per content
          const campaign = "results_share";
          const contentId = "results_<%- sluggifiedTitle %>"; // optional

          try {
            // You *can’t* reliably know the final share target app,
            // but you can pass a hint like "share_sheet" for reporting.
            const { shareUrl } = await createShareLink({
              url: canonicalUrl,
              campaign,
              contentId,
              channelHint: "share_sheet"
            });

            const shareData = {
              title: "<%- meta.title %>",
              text: "<%- meta.description %>",
              url: shareUrl
            };

            if (navigator.share) {
              await navigator.share(shareData);
            } else {
              await copyToClipboard(shareUrl);
              alert("Link copied!");
            }
          } catch (err) {
            // If user cancels the share sheet, it throws AbortError
            if (err?.name === "AbortError") return;

            console.error(err);
            // Final fallback: copy the canonical URL (or show an error)
            try {
              await copyToClipboard(canonicalUrl);
              alert("Couldn’t create a share link. Copied a fallback link instead.");
            } catch {
              alert("Couldn’t share right now.");
            }
          }
        });
      }

      // ---- Initialize ----

      document.addEventListener('DOMContentLoaded', () => {
        setupTabs();
        initializeActiveTable();
        setupSearch();
        setupShare();
      });
    </script>
